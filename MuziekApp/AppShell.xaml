<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MuziekApp.Views"
       x:Class="MuziekApp.AppShell"
       Shell.NavBarIsVisible="False">

    <!-- Hoofdpagina als startpunt -->
    <ShellContent 
        Title="Main" 
        ContentTemplate="{DataTemplate views:MainView}" 
        Route="MainView" />

    <!-- Loginpagina -->
    <ShellContent 
        Title="Login" 
        ContentTemplate="{DataTemplate views:LoginView}" 
        Route="LoginView" />

    <!-- Zoekpagina -->
    <ShellContent 
        Title="Zoeken" 
        ContentTemplate="{DataTemplate views:SearchView}" 
        Route="SearchView" />
</Shell>