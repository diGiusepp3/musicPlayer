<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuziekApp.App">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Kleuren -->
            <Color x:Key="BackgroundGradientStart">#0B2C28</Color>
            <Color x:Key="BackgroundGradientEnd">#09211E</Color>
            <Color x:Key="AccentColor">White</Color>
            <Color x:Key="SecondaryColor">#14A37F</Color>
            <Color x:Key="TextColorLight">#FFFFFF</Color>
            <Color x:Key="TextColorDark">#000000</Color>

            <!-- Gradient achtergrond (gebruikt per pagina) -->
            <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource BackgroundGradientStart}" Offset="0.0" />
                <GradientStop Color="{StaticResource BackgroundGradientEnd}" Offset="1.0" />
            </LinearGradientBrush>

            <!-- Standaard knop stijl -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
                <Setter Property="TextColor" Value="{StaticResource BackgroundGradientEnd}" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="WidthRequest" Value="150" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>