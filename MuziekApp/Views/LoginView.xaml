<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuziekApp.Views.LoginView"
             Title="Login">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource BackgroundGradientStart}" Offset="0.0" />
            <GradientStop Color="{StaticResource BackgroundGradientEnd}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Inloggen"
               FontSize="30"
               HorizontalOptions="Center"
               TextColor="White" />

        <Entry Placeholder="E-mail" Text="{Binding Email}" />
        <Entry Placeholder="Wachtwoord" IsPassword="True" Text="{Binding Password}" />

        <Button Text="Inloggen" Command="{Binding LoginCommand}" />

        <Label Text="{Binding Message}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>