<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MuziekApp.ViewModels"
             x:Class="MuziekApp.Views.MainView"
             Title="MuziekApp"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Bovenbalk -->
        <Grid Padding="20,40,20,10" ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
            <Label Text="{Binding WelcomeMessage}" FontSize="28" TextColor="White" FontAttributes="Bold"
                   Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
            <Image Source="profile.png" WidthRequest="40" HeightRequest="40"
                   Grid.Row="0" Grid.Column="1" Aspect="AspectFill" Margin="0,0,10,0"/>
            <Button Text="Log uit" Grid.Row="0" Grid.Column="2"
                    Clicked="OnLogoutClicked" BackgroundColor="#1DB954" TextColor="White"/>
            <SearchBar x:Name="SearchBarRef" Grid.Row="1" Grid.ColumnSpan="3"
                       Placeholder="Zoek naar nummers, artiesten..."
                       SearchCommand="{Binding SearchCommand}"
                       SearchCommandParameter="{Binding Text, Source={x:Reference SearchBarRef}}" />
        </Grid>

        <!-- Lijst met liedjes -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Songs}" SelectionMode="None" Margin="20,0,20,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="80,*" BackgroundColor="#1E1E1E" Margin="0,0,0,10">
                        <Frame HasShadow="False" Padding="0" CornerRadius="8" WidthRequest="70" HeightRequest="70">
                            <Image Source="{Binding cover_url}" Aspect="AspectFill"/>
                        </Frame>
                        <VerticalStackLayout Grid.Column="1" Padding="10,0">
                            <Label Text="{Binding title}" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                            <Label Text="{Binding artists}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=PlaySongCommand}" 
                                                  CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- MiniPlayer onderaan -->
        <Grid Grid.Row="2" BackgroundColor="#181818" Padding="10" HeightRequest="60"
              IsVisible="{Binding IsMiniPlayerVisible}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0">
                <Label Text="{Binding CurrentSongTitle}" TextColor="White" FontAttributes="Bold"/>
                <Label Text="{Binding CurrentSongArtist}" TextColor="Gray" FontSize="12"/>
            </VerticalStackLayout>

            <Button Grid.Column="1" Text="⏯"
                    Command="{Binding TogglePlayPauseCommand}"
                    BackgroundColor="#1DB954" TextColor="White" WidthRequest="50"/>
            <Button Grid.Column="2" Text="⏹"
                    Command="{Binding StopSongCommand}"
                    BackgroundColor="#B22222" TextColor="White" WidthRequest="50"
                    Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</ContentPage>
