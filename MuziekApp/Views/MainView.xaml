<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuziekApp.Views.MainView"
             Title="MuziekApp"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Bovenbalk -->
        <StackLayout Padding="20,40,20,10" Orientation="Horizontal">
            <Label Text="Goedemiddag"
                   FontSize="28"
                   TextColor="White"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            <Image Source="profile.png"
                   WidthRequest="40"
                   HeightRequest="40"
                   HorizontalOptions="EndAndExpand"
                   Aspect="AspectFill"
                   Margin="0,0,10,0"/>
            <Button Text="Log uit" Clicked="OnLogoutClicked" />
        </StackLayout>

        <!-- Hoofdcontent -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="25" Padding="20,0,20,100">
                <!-- Snelle navigatie (bijv. voor jouw mixen) -->
                <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween">
                    <Frame WidthRequest="150" HeightRequest="60" CornerRadius="8" BackgroundColor="#282828">
                        <Label Text="Jouw Playlists" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </Frame>
                    <Frame WidthRequest="150" HeightRequest="60" CornerRadius="8" BackgroundColor="#282828">
                        <Label Text="Podcasts" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </Frame>
                    <Frame WidthRequest="150" HeightRequest="60" CornerRadius="8" BackgroundColor="#282828">
                        <Label Text="Favorieten" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </Frame>
                </FlexLayout>

                <!-- Aanbevolen -->
                <Label Text="Aanbevolen voor jou"
                       FontSize="22"
                       TextColor="White"
                       FontAttributes="Bold"/>

                <CollectionView ItemsSource="{Binding RecommendedMusic}"
                                ItemsLayout="HorizontalList"
                                HeightRequest="200"
                                Margin="0,0,0,20">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="5" WidthRequest="140">
                                <Frame CornerRadius="8" IsClippedToBounds="True" Padding="0">
                                    <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                </Frame>
                                <Label Text="{Binding Title}" TextColor="White" FontSize="14" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Artist}" TextColor="#AAAAAA" FontSize="12" LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Populaire artiesten -->
                <Label Text="Populaire artiesten"
                       FontSize="22"
                       TextColor="White"
                       FontAttributes="Bold"/>
                <CollectionView ItemsSource="{Binding PopularArtists}"
                                ItemsLayout="HorizontalList"
                                HeightRequest="180">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout WidthRequest="120" Spacing="5">
                                <Frame CornerRadius="60" 
                                       WidthRequest="120" 
                                       HeightRequest="120" 
                                       IsClippedToBounds="True"
                                       Padding="0"
                                       BackgroundColor="Transparent"
                                       BorderColor="Transparent">
                                    <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                </Frame>
                                <Label Text="{Binding Name}" 
                                       TextColor="White" 
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Onderbalk -->
        <Grid BackgroundColor="#181818"
              Padding="20,10"
              VerticalOptions="End"
              HeightRequest="60"
              Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="home.png" Grid.Column="0" HorizontalOptions="Center"/>
            <Image Source="search.png" Grid.Column="1" HorizontalOptions="Center"/>
            <Image Source="library.png" Grid.Column="2" HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>
